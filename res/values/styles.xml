<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SalesDTheme" parent="android:style/Theme.Holo.Light">
        <!-- Set background color here will also affect action bar -->
        <!-- <item name="android:background">@color/default_activity_bg</item> -->

        <!-- <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item> -->

        <item name="android:actionBarStyle">@style/SalesDTheme.ActionBar</item>
    </style>

    <style name="SalesDTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/default_action_bar_bg</item>
        <!-- <item name="android:backgroundSplit">@color/default_action_bar_bg</item> -->

        <item name="android:titleTextStyle">@style/SalesDTheme.ActionBar.TitleText</item>
    </style>

    <style name="SalesDTheme.ActionBar.TitleText"
            parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ConfigEditCategoryHeader">
        <item name="android:paddingLeft">@dimen/main_list_item_left_padding</item>
        <item name="android:paddingTop">@dimen/main_list_item_top_padding</item>
        <item name="android:paddingRight">@dimen/main_list_item_right_padding</item>
        <item name="android:paddingBottom">@dimen/main_list_item_bottom_padding</item>
    </style>

</resources>