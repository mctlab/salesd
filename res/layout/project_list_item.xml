<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/priority_indicator"
        android:layout_width="@dimen/project_priority_indicator_width"
        android:layout_height="match_parent"
        android:paddingTop="0dip"
        android:paddingBottom="0dip"
        android:contentDescription="@null"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/main_list_item_left_padding"
        android:paddingTop="@dimen/main_list_item_top_padding"
        android:paddingRight="@dimen/main_list_item_right_padding"
        android:paddingBottom="@dimen/main_list_item_bottom_padding"
        android:orientation="vertical"
        >
        <TextView
           android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </LinearLayout>
</LinearLayout>
