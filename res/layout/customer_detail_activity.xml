<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/basic_info"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="@integer/project_detail_layout_weight_basic_info"
        android:background="@android:color/darker_gray"
        android:paddingLeft="@dimen/default_activity_left_padding"
        android:paddingTop="@dimen/default_activity_top_padding"
        android:paddingRight="@dimen/default_activity_right_padding"
        android:paddingBottom="@dimen/default_activity_bottom_padding"
        android:orientation="vertical"
        >
        <!-- category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_category"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                />
            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <!-- address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_company_address"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <!-- leader -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/label_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_leader"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                />
            <TextView
                android:id="@+id/leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/none_u"
                android:textColor="@color/customer_leader_text_selector"
                />
        </LinearLayout>
        <!-- description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dip"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_business_description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_gravity="bottom"
        android:background="@color/internal_tab_divider_color"
        />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >
        <!-- Project tab -->
        <LinearLayout
            android:id="@+id/project_tab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/internal_tab_bg"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/project_tab_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/internal_tab_title_top_padding"
                android:paddingBottom="@dimen/internal_tab_title_bottom_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp"
                android:gravity="center"
                />
            <View
                android:id="@+id/project_tab_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/internal_tab_underline_height"
                android:background="@color/internal_tab_underline_color"
                android:visibility="invisible"
                />
        </LinearLayout>

        <!-- Visit schedule tab -->
        <LinearLayout
            android:id="@+id/visit_schedule_tab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/internal_tab_bg"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/visit_schedule_tab_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/internal_tab_title_top_padding"
                android:paddingBottom="@dimen/internal_tab_title_bottom_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp"
                android:gravity="center"
                />
            <View
                android:id="@+id/visit_schedule_tab_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/internal_tab_underline_height"
                android:background="@color/internal_tab_underline_color"
                android:visibility="invisible"
                />
        </LinearLayout>

        <!-- Visit record tab -->
        <LinearLayout
            android:id="@+id/visit_record_tab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/internal_tab_bg"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/visit_record_tab_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/internal_tab_title_top_padding"
                android:paddingBottom="@dimen/internal_tab_title_bottom_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp"
                android:gravity="center"
                />
            <View
                android:id="@+id/visit_record_tab_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/internal_tab_underline_height"
                android:background="@color/internal_tab_underline_color"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="@integer/project_detail_layout_weight_pager"
        />

</LinearLayout>
