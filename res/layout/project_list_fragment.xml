<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/main_list_item_left_padding"
    android:paddingTop="@dimen/main_list_item_top_padding"
    android:paddingRight="@dimen/main_list_item_right_padding"
    android:paddingBottom="@dimen/main_list_item_bottom_padding"
    android:orientation="vertical" >

    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dip"
        />

</LinearLayout>
