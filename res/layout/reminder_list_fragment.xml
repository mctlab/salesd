<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/default_activity_left_padding"
    android:paddingRight="@dimen/default_activity_right_padding"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/main_list_item_left_padding"
        android:paddingTop="@dimen/main_list_item_top_padding"
        android:paddingRight="@dimen/main_list_item_right_padding"
        android:paddingBottom="@dimen/main_list_item_bottom_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/visit_reminders"
        />
    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/list_view_header_divider_color"
        />
    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:divider="@color/list_view_divider_color"
        android:dividerHeight="1dip"
        />
    <View
        android:id="@+id/footer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/list_view_divider_color"
        />
    <Button
        android:id="@+id/show_more_reminder"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_gravity="right"
        android:gravity="center_vertical|right"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/show_more"
        />
</LinearLayout>
